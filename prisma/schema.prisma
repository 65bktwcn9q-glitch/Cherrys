generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ListingStatus {
  DRAFT
  PENDING
  ACTIVE
  REJECTED
  ARCHIVED
}

enum ContactPreference {
  TELEGRAM
  DISCORD
  BOTH
}

enum ReportStatus {
  OPEN
  REVIEWED
  CLOSED
}

enum AdPlacementKey {
  HOME_TOP
  HOME_MID
  CATALOG_SIDEBAR
  LISTING_BOTTOM
  GAME_TOP
}

enum AdEventType {
  IMPRESSION
  CLICK
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  username    String     @unique
  displayName String?
  bio         String?
  avatarUrl   String?
  telegram    String?
  discord     String?
  role        Role       @default(USER)
  createdAt   DateTime   @default(now())
  listings    Listing[]
  reports     Report[]
}

model Game {
  id               String    @id @default(uuid())
  slug             String    @unique
  title            String
  coverUrl         String
  shortDescription String
  isActive         Boolean   @default(true)
  listings         Listing[]
}

model Category {
  id       String    @id @default(uuid())
  slug     String    @unique
  title    String
  icon     String
  isActive Boolean   @default(true)
  listings Listing[]
}

model Listing {
  id                 String            @id @default(uuid())
  userId             String
  gameId             String
  categoryId         String
  title              String
  description        String
  snippet            String
  price              Int
  currency           String
  platform           String
  language           String
  country            String?
  tags               String[]
  contactPreference  ContactPreference
  isOnline           Boolean           @default(false)
  status             ListingStatus     @default(PENDING)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  viewCount          Int               @default(0)
  user               User              @relation(fields: [userId], references: [id])
  game               Game              @relation(fields: [gameId], references: [id])
  category           Category          @relation(fields: [categoryId], references: [id])
  images             ListingImage[]
  reports            Report[]
  confirmations      Confirmation[]

  @@index([gameId, categoryId, status, createdAt])
  @@index([price])
  @@index([platform])
}

model ListingImage {
  id        String   @id @default(uuid())
  listingId String
  url       String
  sortOrder Int      @default(0)
  listing   Listing  @relation(fields: [listingId], references: [id])
}

model Report {
  id             String       @id @default(uuid())
  listingId      String
  reporterUserId String?
  reason         String
  details        String?
  status         ReportStatus @default(OPEN)
  createdAt      DateTime     @default(now())
  listing        Listing      @relation(fields: [listingId], references: [id])
  reporter       User?        @relation(fields: [reporterUserId], references: [id])
}

model AdPlacement {
  id             String          @id @default(uuid())
  placementKey   AdPlacementKey
  title          String
  imageUrl       String?
  linkUrl        String?
  isActive       Boolean         @default(true)
  weight         Int             @default(1)
  startAt        DateTime?
  endAt          DateTime?
  advertiserName String?
  notes          String?
  createdAt      DateTime        @default(now())
  events         AdEvent[]
  stats          AdStatsDaily[]
}

model AdEvent {
  id            String       @id @default(uuid())
  adId          String
  type          AdEventType
  listingId     String?
  gameId        String?
  pagePath      String
  createdAt     DateTime     @default(now())
  ipHash        String?
  userAgentHash String?
  ad            AdPlacement  @relation(fields: [adId], references: [id])
}

model AdStatsDaily {
  id          String   @id @default(uuid())
  adId        String
  date        String
  impressions Int      @default(0)
  clicks      Int      @default(0)
  ad          AdPlacement @relation(fields: [adId], references: [id])

  @@unique([adId, date], name: "adId_date")
}

model Confirmation {
  id           String   @id @default(uuid())
  listingId    String
  sellerUserId String
  buyerName    String?
  rating       Int
  text         String?
  createdAt    DateTime @default(now())
  isApproved   Boolean  @default(false)
  listing      Listing  @relation(fields: [listingId], references: [id])
}
